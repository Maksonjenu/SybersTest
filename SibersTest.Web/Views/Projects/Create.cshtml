@model SibersTest.Services.DTOs.ProjectFormDto


<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white py-3">
            @{
                if(@Model.Id != 0)
                {
                    <h4 class="mb-0"><i class="bi bi-rocket-takeoff me-2"></i>Edit Project @Model.Name</h4> <!-- Edit project title -->
                }
                else
                {
                    <h4 class="mb-0"><i class="bi bi-rocket-takeoff me-2"></i>New Project</h4> <!-- New project title -->
                }
            }
        </div>
        
        <div class="card-body p-4">
            <!-- Progress bar -->
            <div class="mb-4">
                <div class="d-flex justify-content-between mb-1">
                    <span id="step-title" class="fw-bold text-primary">Step 1: Project Details</span>
                    <span id="step-count" class="text-muted">1 of 5</span>
                </div>
                <div class="progress" style="height: 8px;">
                    <div id="wizard-progress" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 20%;"></div>
                </div>
            </div>

            <form id="project-form" novalidate>
                <!-- Step 1 -->
                <div id="step-1" class="wizard-step">
                    <h5 class="mb-3">Main Information</h5>
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label">Project Name</label>
                            <input type="text" id="Name" name="Name" class="form-control" placeholder="e.g. Website Redesign" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Start Date</label>
                            <input type="date" id="StartDate" name="StartDate" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">End Date</label>
                            <input type="date" id="EndDate" name="EndDate" class="form-control" required />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Priority</label>
                            <select id="Priority" name="Priority" class="form-select">
                                <option value="0">Low</option>
                                <option value="1">Medium</option>
                                <option value="2">High</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Step 2 -->
                <div id="step-2" class="wizard-step d-none">
                    <h5 class="mb-3">Companies</h5>
                    <div class="mb-3">
                        <label class="form-label">Customer</label>
                        <input type="text" id="CustomerCompany" name="CustomerCompany" class="form-control" placeholder="LLC 'Vector'" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Executor</label>
                        <input type="text" id="ExecutorCompany" name="ExecutorCompany" class="form-control" placeholder="Sibers" />
                    </div>
                </div>

                <!-- Step 3 -->
                <div id="step-3" class="wizard-step d-none">
                    <h5 class="mb-3">Project Manager</h5>
                    <div class="position-relative">
                        <input type="text" id="manager-search-input" class="form-control" placeholder="Start typing last name...">
                        <ul id="manager-results-list" class="list-group position-absolute w-100 shadow search-results" style="display:none;"></ul>
                    </div>
                    <div id="selected-manager-info" class="mt-3 alert alert-success d-none d-flex justify-content-between align-items-center">
                        <div><i class="bi bi-person-check-fill me-2"></i>Selected: <strong id="manager-name-display"></strong></div>
                        <input type="hidden" id="ManagerId" name="ManagerId">
                        <button type="button" class="btn-close" onclick="wizard.clearManager()"></button>
                    </div>
                </div>

                <!-- Step 4 -->
                <div id="step-4" class="wizard-step d-none">
                    <h5 class="mb-3">Project Team</h5>
                    <div class="position-relative mb-3">
                        <input type="text" id="employee-search-input" class="form-control" placeholder="Search employees...">
                        <ul id="search-results-list" class="list-group position-absolute w-100 shadow search-results" style="display:none;"></ul>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr><th>Employee</th><th>Email</th><th width="50"></th></tr>
                            </thead>
                            <tbody id="selected-employees-table"></tbody>
                        </table>
                    </div>
                </div>

                <!-- Step 5 -->
                <div id="step-5" class="wizard-step d-none">
                    <h5 class="mb-3">Documentation</h5>
                    <div id="drop-zone" class="drop-zone d-flex flex-column align-items-center justify-content-center">
                        <i class="bi bi-cloud-arrow-up fs-1 text-primary"></i>
                        <span class="drop-zone__prompt mt-2">Drag files here or click</span>
                        <input type="file" name="Documents" id="project-files" class="drop-zone__input d-none" multiple>
                    </div>
                    <ul id="file-list" class="list-group mt-3"></ul>
                </div>
            </form>
        </div>

        <div class="card-footer bg-white p-4 d-flex justify-content-between">
            <button type="button" class="btn btn-outline-secondary px-4" id="prev-btn" style="display:none;">Back</button>
            <div class="ms-auto">
                <button type="button" class="btn btn-primary px-4" id="next-btn">Next</button>
                <button type="button" class="btn btn-success px-4" id="submit-btn" style="display:none;">Create Project</button>
            </div>
        </div>
    </div>
</div>


    <style>
        /* Drop zone */
.drop-zone {
    border: 2px dashed #007bff;
    border-radius: 12px;
    background: #f8f9fa;
    transition: all 0.3s ease;
    min-height: 180px;
}
.drop-zone:hover, .drop-zone--over {
    background: #e9ecef;
    border-color: #0056b3;
    transform: scale(1.01);
}

/* Search results (AJAX) */
.search-results {
    z-index: 1050;
    max-height: 250px;
    overflow-y: auto;
    border-radius: 0 0 8px 8px;
}

/* Custom progress bar */
.progress {
    border-radius: 10px;
    background-color: #e9ecef;
    box-shadow: inset 0 1px 2px rgba(0,0,0,.1);
}

/* Remove buttons in table */
.btn-remove {
    color: #dc3545;
    cursor: pointer;
    transition: transform 0.2s;
}
.btn-remove:hover {
    transform: scale(1.2);
}

/* Step fade-in animation */
.wizard-step {
    animation: fadeIn 0.4s ease-in-out;
}

    </style>

@using System.Text.Json

<script>
    const serverModel = @Html.Raw(JsonSerializer.Serialize(Model));
</script>


@section Scripts {
    <script src="~/js/wizard.js"></script>
}